  } else u8g2.print("#No data!");
  //绘制实时曲线
  for (int i = 0; i < 16; i++) {
    u8g2.drawLine(8 * i, 63 - grap[0][i], 8 * (i + 1), 63 - grap[0][i + 1]);
    u8g2.drawLine(8 * i, 63 - grap[1][i], 8 * (i + 1), 63 - grap[1][i + 1]);
  }
  u8g2.sendBuffer();
}
